---
import Button from './Button.astro';
import siteConfig from '../data/site-config';

const subscribe = siteConfig.subscribe;

const { class: className } = Astro.props;
---

{
  subscribe?.formUrl && (
    <section
      class:list={[
        'border-main flex flex-col items-center border border-dashed px-8 py-12 text-center sm:px-12 sm:py-16',
        className,
      ]}
    >
      {subscribe.title && (
        <h2
          class:list={[
            'w-full max-w-xl font-serif text-2xl leading-tight font-medium sm:text-4xl',
            subscribe.text ? 'mb-4' : 'mb-8',
          ]}
        >
          {subscribe.title}
        </h2>
      )}
      {subscribe.text && (
        <p class="mb-8 w-full max-w-xl text-sm leading-normal">{subscribe.text}</p>
      )}
      <form
        action={subscribe.formUrl}
        method="post"
        id="subscribe-form"
        name="subscribe-form"
        class="flex w-full max-w-xl flex-col gap-3.5 sm:flex-row"
        target="_blank"
      >
        <label for="email" class="sr-only">
          Email Address
        </label>
        <input
          type="email"
          name="email"
          id="email"
          class="text-main border-main placeholder:text-main/60 h-9 w-full rounded-full border bg-transparent px-5 py-2 text-sm focus:outline-hidden"
          required=""
          value=""
          placeholder="Your email"
        />
        <Button type="submit" name="subscribe" class="h-9 w-full sm:w-auto">
          Subscribe
        </Button>
      </form>
    </section>
  )
}
